# Backend environment variables (example, no secrets)
PARALLEL_ENV=development
DEPLOYMENT_MODE=development

# URLs
BACKEND_URL=http://localhost:8000
FRONTEND_APP_URL=http://localhost:5173/app
FRONTEND_BASE_URL=http://localhost:5173

# Database (local SQLite)
DATABASE_URL=sqlite:///./parallel.db
ALLOW_SQLITE_FALLBACK=true

# Security
SECRET_KEY=change-me

# Optional integrations
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Demo MongoDB + embeddings
MONGODB_URI=
MONGODB_DB=parallel_demo
MONGODB_VECTOR_INDEX=memory_docs_embedding
EMBEDDINGS_PROVIDER=voyage
VOYAGE_API_KEY=
VOYAGE_MODEL=voyage-3

# Fireworks (LLM + embeddings fallback)
FIREWORKS_API_KEY=
FIREWORKS_BASE_URL=https://api.fireworks.ai/inference/v1
FIREWORKS_EMBED_MODEL=nomic-ai/nomic-embed-text-v1.5
DEMO_CHAT_MODEL=accounts/fireworks/models/llama-v3p1-70b-instruct
LLM_PROVIDER=openai
FIREWORKS_API_KEY=
FIREWORKS_BASE_URL=https://api.fireworks.ai/inference/v1
FIREWORKS_MODEL=

# CORS (extra origins beyond defaults in code)
CORS_ALLOW_ORIGINS=
